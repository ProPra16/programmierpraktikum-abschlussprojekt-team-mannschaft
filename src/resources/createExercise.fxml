<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.control.Label?>
<GridPane fx:id="mainpane" fx:controller="main.java.tddt.gui.dialogs.CreateExerciseController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextArea fx:id="titlelabel" promptText="Enter the title of your exercise (classname)" GridPane.columnSpan="2" prefHeight="15" GridPane.hgrow="ALWAYS"/>
    <TextArea fx:id="desclabel" promptText="Enter the description of your exercise" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>
    <Label id="alertlabel" text="NOTE:" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS"/>
    <Label text="By creating an exercise with an already existing title," GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
    <Label text="you will override the existing exercise!" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
    <Label fx:id="alert" id="alertlabel" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
    <Button text="Enter" fx:id="enter" GridPane.columnIndex="1" prefWidth="300" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" onAction="#enter"/>
    <Button text="Cancel" GridPane.rowIndex="6" prefWidth="300" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" onAction="#cancel"/>

</GridPane>