    <Label text="You are about to delete all changes you made since last phase irretrievably!" prefWidth="210" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" wrapText="true" prefHeight="80" GridPane.columnSpan="2"/>

    <Button text="OK" GridPane.columnIndex="1" prefWidth="100" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" onAction="#ok"/>
